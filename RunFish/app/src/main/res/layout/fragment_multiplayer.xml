<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".StatsFragment" android:id="@+id/constraintLayout"
                                             android:background="@drawable/fons">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_levels"
            android:background="@drawable/new_tablon"
            style="@style/MistralStyle" android:text="@string/levels" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/text_Multiplayer"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_fish_multiplayer"
            android:background="@drawable/new_tablon"
            style="@style/MistralStyle" android:text="@string/fish"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_comeback"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/layout_constrait_table" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_levels"
            app:layout_constraintHorizontal_bias="0.423" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="24dp"/>
    <ImageView
            android:src="@drawable/corda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/button_levels" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_levels" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_fish_multiplayer" android:layout_marginStart="20dp"
            app:layout_constraintVertical_bias="0.516"/>
    <ImageView
            android:src="@drawable/corda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_levels" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_fish_multiplayer"
            app:layout_constraintVertical_bias="0.516" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="172dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_comeback" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/flecha_izq" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.948"/>
    <TextView
            android:text="@string/multiplayer"
            android:layout_width="170dp"
            android:layout_height="55dp" android:id="@+id/text_Multiplayer" android:background="@drawable/tablon"
            style="@style/MistralStyle" android:paddingLeft="30dp" android:paddingTop="25dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="367dp"
            tools:context=".SignInFragment" android:background="@drawable/tablon_grande"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/layout_constrait_table"
            android:layout_height="276dp" app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintVertical_bias="0.322"/>
</android.support.constraint.ConstraintLayout>