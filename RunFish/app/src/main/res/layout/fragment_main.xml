<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainFragment" android:id="@+id/constraintLayout"
                                             android:background="@drawable/fons"
>
    <Button
            android:text="@string/sign_in"
            android:id="@+id/buttonSignIn"
            android:background="@drawable/fusta"
            style="@style/MistralStyle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonEnter"
            android:layout_marginTop="296dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEnter"
            android:background="@drawable/fusta"
            style="@style/MistralStyle"
            app:layout_constraintStart_toEndOf="@+id/buttonSignIn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="296dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:background="@drawable/tablon_up" android:hint="@string/username"
            style="@style/MistralStyle" android:textAlignment="center"
            android:paddingBottom="20dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:background="@drawable/tablon" android:hint="@string/password"
            style="@style/MistralStyle"
            android:textAlignment="center" android:paddingTop="18dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.518"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="@string/run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="54sp"
            android:fontFamily="@font/freescpt" android:textColor="@color/colorTitol" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintVertical_bias="0.648"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"/>
    <ImageView
            android:src="@drawable/anemone"
            android:layout_width="64dp"
            android:layout_height="52dp"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="8dp" android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.488" android:contentDescription="@string/todo"/>
    <TextView
            android:text="@string/fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="54sp"
            android:fontFamily="@font/freescpt" android:textColor="@color/colorTitol" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintVertical_bias="0.648" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.597"/>
</android.support.constraint.ConstraintLayout>