<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FriendsFragment" android:id="@+id/constraintLayout"
                                             android:background="@drawable/fons">
    <TextView
            android:text="MENU"
            android:layout_width="170dp"
            android:layout_height="55dp" android:id="@+id/text_Menu" android:background="@drawable/tablon"
            style="@style/MistralStyle" android:paddingLeft="60dp" android:paddingTop="25dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="500dp"
            tools:context=".SignInFragment" android:background="@drawable/tablon_grande"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/layout_constrait_table"
            android:layout_height="340dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/edit_text_username_invite"
                android:background="@android:color/background_light"
                android:hint="Username"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.232" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.62"/>
        <ImageButton
                android:src="@drawable/bola_gris"
                android:layout_width="25dp"
                android:layout_height="25dp" android:id="@+id/imageButton4"
                android:background="@drawable/boton_cuadrado"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.24"
                app:layout_constraintStart_toEndOf="@+id/edit_text_username_invite" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"/>
        <Button
                android:text="INVITE"
                android:layout_width="106dp"
                android:layout_height="39dp" android:id="@+id/button_Invite"
                android:background="@drawable/fusta" style="@style/MistralStyle" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.687"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/edit_text_username_invite"/>
        <ScrollView
                android:layout_width="175dp"
                android:layout_height="217dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/edit_text_username_invite"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.935"
                app:layout_constraintVertical_bias="0.504" android:id="@+id/scroll_friends"
                android:background="@color/colorPrimary">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"/>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>