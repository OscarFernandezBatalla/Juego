<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/fons"
                                             tools:context=".FriendsFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_height="340dp"
            tools:context=".FriendsFragment"
            android:background="@drawable/tablon_grande"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/layout_constrait_table"
            android:layout_width="500dp">
        <EditText
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_userInvite" android:background="@android:color/background_light"
                android:hint="@string/invite_friend" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.69"
                android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/invite"
                android:layout_width="100dp"
                android:layout_height="39dp" android:id="@+id/button_invite"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_userInvite"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.679" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:background="@drawable/fusta"/>
        <Button
                android:layout_width="35dp"
                android:layout_height="35dp" tools:layout_editor_absoluteY="76dp"
                tools:layout_editor_absoluteX="388dp" android:id="@+id/button_cancel"
                android:background="@color/colorAccent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>